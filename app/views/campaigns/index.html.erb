<%= render 'layouts/header' %>

<h1>Your Campaigns</h1>

<table border=1>
  <thead>
    <tr>
      <th>Campaign Name</th>
      <th>Campaign Daily Budget</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @campaigns.each do |campaign| %>
      <tr>
        <td><%= campaign.cname %></td>
        <td><%= campaign.campaigndailybudget %></td>
        <td><%= campaign.status %></td>
        <td><%= link_to 'Show', campaign %></td>
        <td><%= link_to 'Edit', edit_campaign_path(campaign) %></td>
        <td><%= link_to 'Destroy', campaign, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Campaign', new_campaign_path %>
