<%= render 'layouts/header' %>

<h1>Your Ads</h1>

<table border=1>
  <thead>
    <tr>
      <th>Ad group</th>
      <th>Keyword</th>
      <th>Criterion Type</th>
      <th>First Page Bid</th>
      <th>Top of Page Bid</th>
      <th>Status</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @ads.each do |ad| %>
      <tr>
        <td><%= ad.adgroup.aname %></td>
        <td><%= ad.keyword %></td>
        <td><%= ad.criteriontype %></td>
        <td><%= ad.firstpagebid %></td>
        <td><%= ad.topofpagebid %></td>
        <td><%= ad.status %></td>
        <td><%= link_to 'Show', ad %></td>
        <td><%= link_to 'Edit', edit_ad_path(ad) %></td>
        <td><%= link_to 'Destroy', ad, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Create Ad', new_ad_path %>
